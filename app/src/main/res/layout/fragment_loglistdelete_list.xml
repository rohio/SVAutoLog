<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/log_delete_list"
        android:name="com.example.shadowlogauto.LogListDeleteFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        app:layoutManager="LinearLayoutManager"
        tools:context=".LogListDeleteFragment"
        tools:listitem="@layout/fragment_loglistdelete" />

    <Button
        android:id="@+id/delete_choice_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:enabled="false"
        android:backgroundTint="@color/cool_gray"
        android:text="@string/delete"
        android:minHeight="50dp"
        android:textColor="@color/white" />

</LinearLayout>